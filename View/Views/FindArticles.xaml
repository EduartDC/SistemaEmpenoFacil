<Page x:Class="View.Views.FindArticles"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:View.Views"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FindArticles" Background="white">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition  Height="275*"/>
            <RowDefinition Height="75*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="*" />
            <ColumnDefinition  Width="*"/>
            <ColumnDefinition  Width="*"/>
            <ColumnDefinition  Width="*"/>
        </Grid.ColumnDefinitions>

        <Button
            Content="Buscar artículo"
            HorizontalAlignment="Center"

            VerticalAlignment="Center"
            Height="34"
            Width="200"
            Grid.Column="3"/>
        <ComboBox
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="200"
            Height="32"
            Grid.Column="2"/>
        <ScrollViewer
            Background="Black"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Margin="20,20,20,20">

            <DataGrid
                x:Name="dgArticles"
                Grid.Row="1"
                Grid.ColumnSpan="4"
            />
        </ScrollViewer>
        <DatePicker

            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="15"
            Height="32"
            Width="200"
            Grid.Column="1" Focusable="False"/>
        <TextBox
            HorizontalAlignment="Center"
            TextWrapping="Wrap"
            Text=""
            VerticalAlignment="Center"
            Width="200"
            Height="32"
            Grid.Column="0"/>
        <Button
            Content="Editar"
            HorizontalAlignment="Center"
            Margin="0,-20,0,0"
            Grid.Row="2"
            VerticalAlignment="Center"
            Width="128"
            Height="34"
            Grid.Column="3"/>
        <Label
            Content="Serie,Modelo,Etc"
            Grid.Row="0"
            Grid.Column="0"
            FontWeight="Bold"
            Margin="0,10,0,66"
            HorizontalAlignment="Center"
            Width="144"
            HorizontalContentAlignment="Center"/>
        <Label
            Content="Serie,Modelo,Etc"
            Grid.Row="0"
            Grid.Column="1"
            FontWeight="Bold"
            Margin="0,10,0,66"
            HorizontalAlignment="Center"
            Width="144"
            HorizontalContentAlignment="Center"/>
        <Label
            Content="Serie,Modelo,Etc"
            Grid.Row="0"
            Grid.Column="2"
            FontWeight="Bold"
            VerticalAlignment="Top"
            Width="144"
            HorizontalContentAlignment="Center"/>

    </Grid>
</Page>
