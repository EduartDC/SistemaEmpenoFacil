<Page
    x:Class="View.Views.SetAsideView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:View.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SetAsideView"
    d:DesignHeight="800"
    d:DesignWidth="1366"
    mc:Ignorable="d">

    <Grid Background="White">

        <Grid.RowDefinitions>

            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Contenido principal  -->
        <Grid Grid.Row="2" Grid.Column="0">
            <!--  Agrega tus elementos de contenido principal aquí  -->

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="380" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" MaxHeight="450" />
                <RowDefinition Height="Auto" MinHeight="250" />
                <RowDefinition Height="Auto" MinHeight="50" />
            </Grid.RowDefinitions>

            <DataGrid
                x:Name="tableCustomers"
                Grid.Row="0"
                Grid.Column="1"
                Width="961"
                Margin="15,38,0,28"
                HorizontalAlignment="Left"
                AlternatingRowBackground="#E0E0E0"
                AutoGenerateColumns="False"
                Background="#F5F5F5"
                BorderBrush="#2E2E2E"
                BorderThickness="2,2,2,2"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                CanUserResizeRows="False"
                HeadersVisibility="Column"
                ItemsSource="{Binding Items}"
                RowHeaderWidth="0">
                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Foreground" Value="#FFFFFF" />
                        <Setter Property="Background" Value="#2E2E2E" />
                        <Setter Property="FontSize" Value="14" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Height" Value="40" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                    </Style>
                    <Style TargetType="{x:Type DataGridCell}">
                        <Setter Property="Foreground" Value="#000000" />
                        <Setter Property="FontSize" Value="12" />
                        <Setter Property="Height" Value="30" />
                        <Setter Property="Padding" Value="10,0,0,0" />
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="Auto"
                        MinWidth="100"
                        Binding="{Binding idCustomer}"
                        Header="Id Prenda" />
                    <DataGridTextColumn
                        Width="Auto"
                        MinWidth="250"
                        Binding="{Binding firstName}"
                        Header="Cescripcion" />
                    <DataGridTextColumn
                        Width="Auto"
                        MinWidth="250"
                        Binding="{Binding lastName}"
                        Header="Caracterisiticas" />
                    <DataGridTextColumn
                        Width="Auto"
                        MinWidth="120"
                        Binding="{Binding curp}"
                        Header="Monto Avaluo" />
                    <DataGridTextColumn
                        Width="Auto"
                        MinWidth="120"
                        Binding="{Binding curp}"
                        Header="Monto Prestamo" />
                    <DataGridTextColumn
                        Width="Auto"
                        MinWidth="120"
                        Binding="{Binding curp}"
                        Header="Monto Venta" />
                </DataGrid.Columns>
            </DataGrid>
            <Label
                Margin="40,108,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Fecha Limite"
                FontSize="16"
                FontWeight="Bold" />
            <Label
                Margin="40,233,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Porcentaje del apartado"
                FontSize="16"
                FontWeight="Bold" />
            <DatePicker
                x:Name="pickerDeadLineDate"
                Width="146"
                Height="30"
                Margin="84,163,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="16"
                FontWeight="Bold" />
            <ComboBox
                x:Name="comBoxPercentage"
                Width="146"
                Height="30"
                Margin="84,300,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="16"
                FontWeight="Bold" />
            <TextBox
                x:Name="textCURP"
                Grid.Row="1"
                Width="198"
                Height="23"
                Margin="84,51,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="16"
                FontWeight="Bold"
                Text="TextBox"
                TextWrapping="Wrap" />
            <Button
                x:Name="btnAddCustomer"
                Grid.Row="1"
                Width="132"
                Margin="84,86,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Registrar Cliente"
                FontSize="16"
                FontWeight="Bold" />
            <Button
                x:Name="btnSearch"
                Grid.Row="1"
                Width="61"
                Margin="221,86,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Buscar"
                FontSize="16"
                FontWeight="Bold"
                RenderTransformOrigin="0.459,0.065" />
            <Label
                Grid.Row="1"
                Margin="64,141,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Nombre del Cleinte"
                FontSize="16"
                FontWeight="Bold" />
            <TextBox
                x:Name="textCustomerName"
                Grid.Row="1"
                Width="190"
                Margin="92,177,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="16"
                FontWeight="Bold"
                Text="TextBox"
                TextWrapping="Wrap" />
            <Label
                x:Name="labelSubTotal"
                Grid.Row="1"
                Grid.Column="1"
                Margin="46,17,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Label"
                FontSize="26"
                FontWeight="Bold" />
            <Label
                x:Name="labelIva"
                Grid.Row="1"
                Grid.Column="1"
                Margin="65,62,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Label"
                FontSize="20"
                FontWeight="Bold" />
            <Label
                x:Name="labelTotal"
                Grid.Row="1"
                Grid.Column="1"
                Margin="46,110,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Label"
                FontSize="24"
                FontWeight="Bold" />
            <Label
                x:Name="labelAmount"
                Grid.Row="1"
                Grid.Column="1"
                Margin="46,153,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Label"
                FontSize="24"
                FontWeight="Bold" />
            <Button
                x:Name="btnAddArticle"
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,10,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Content="Agregar Articulo" />
            <Button
                x:Name="bntCancel"
                Grid.Row="2"
                Grid.Column="1"
                Margin="303,25,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"

                Content="Cancelar" />
            <Label
                x:Name="labelRemaining"
                Grid.Row="1"
                Grid.Column="1"
                Margin="46,198,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Label"
                FontSize="24"
                FontWeight="Bold" />
        </Grid>
        <Button
            x:Name="btnPay"
            Margin="999,721,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Button_Click"
            Content="Pagar" />
        <Label
            Margin="63,467,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="CURP"
            FontSize="16"
            FontWeight="Bold" />


    </Grid>
</Page>
