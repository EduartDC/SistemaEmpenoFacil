<Page
    x:Class="View.Views.CustomerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:View.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CustomerView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="#323D8F">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Encabezado  -->
        <StackPanel
            Grid.Row="0"
            HorizontalAlignment="Center"
            Background="#323D8F"
            Orientation="Horizontal">
            <Image Height="60" Source="/Images/logo.png" />
            <!--  Agrega tus elementos de encabezado aquí  -->

        </StackPanel>

        <!--  Contenido  -->
        <Grid Grid.Row="1" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Contenido principal  -->
            <Grid>
                <!--  Agrega tus elementos de contenido principal aquí  -->
            </Grid>

        </Grid>
        <StackPanel
            Grid.RowSpan="2"
            Margin="0,0,0,354"
            Orientation="Horizontal">

            <Label
                Width="Auto"
                Height="24"
                Margin="-2,0,0,0"
                Content="Inicio/BuscarClientes/"
                Foreground="White" />

            <Label
                Width="Auto"
                Height="24"
                Margin="-9,0,0,0"
                Content="ModificarCliente"
                FontWeight="Bold"
                Foreground="White" />

        </StackPanel>
    </Grid>
</Page>
