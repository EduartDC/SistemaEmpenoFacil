<Page
    x:Class="View.Views.CustomerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:View.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CustomerView"
    d:DesignHeight="768"
    d:DesignWidth="1366"
    mc:Ignorable="d">

    <Grid VerticalAlignment="Top" Background="#323D8F">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Encabezado  -->
        <StackPanel
            Grid.Row="0"
            HorizontalAlignment="Center"
            Background="#323D8F"
            Orientation="Horizontal">
            <Image Height="60" Source="/Images/logo.png" />
            <!--  Agrega tus elementos de encabezado aquí  -->

        </StackPanel>

        <!--  Contenido  -->
        <Grid
            Grid.Row="1"
            Margin="0,0,0,-707"
            Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Contenido principal  -->
            <Grid Grid.Column="0">
                <!--  Agrega tus elementos de contenido principal aquí  -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />


                </Grid.ColumnDefinitions>

                <TextBox
                    Grid.Row="0"
                    Grid.Column="0"
                    Width="180"
                    Margin="60,97,0,259"
                    Padding="8"
                    HorizontalAlignment="Left"
                    Background="White"
                    BorderBrush="#323D8F"
                    BorderThickness="0,0,0,2"
                    FontFamily="Segoe UI"
                    FontSize="14"
                    Foreground="Black"
                    IsEnabled="False"
                    Text="hola" />
                <TextBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="180"
                    Margin="30,104,0,259"
                    Padding="8"
                    HorizontalAlignment="Left"
                    VerticalContentAlignment="Center"
                    Background="White"
                    BorderBrush="#323D8F"
                    BorderThickness="0,0,0,2"
                    FontFamily="Segoe UI"
                    FontSize="14"
                    Foreground="Black"
                    IsEnabled="False" />
                <TextBox
                    Grid.Row="0"
                    Grid.Column="2"
                    Width="270"
                    Margin="0,104,0,259"
                    Padding="8"
                    HorizontalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="White"
                    BorderBrush="#323D8F"
                    BorderThickness="0,0,0,2"
                    FontFamily="Segoe UI"
                    FontSize="14"
                    Foreground="Black"
                    IsEnabled="False" />
                <TextBox
                    Grid.Row="0"
                    Width="334"
                    Margin="0,210,0,153"
                    Padding="8"
                    HorizontalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="White"
                    BorderBrush="#323D8F"
                    BorderThickness="0,0,0,2"
                    FontFamily="Segoe UI"
                    FontSize="14"
                    Foreground="Black" />
                <TextBox
                    Grid.Column="1"
                    Width="270"
                    Margin="27,210,0,153"
                    Padding="8"
                    HorizontalAlignment="Left"
                    VerticalContentAlignment="Center"
                    Background="White"
                    BorderBrush="#323D8F"
                    BorderThickness="0,0,0,2"
                    FontFamily="Segoe UI"
                    FontSize="14"
                    Foreground="Black" />
                <Label
                    Grid.Column="0"
                    Width="72"
                    Height="26"
                    Margin="60,176,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Dirección *"
                    FontWeight="Bold" />
                <Label
                    Grid.Column="1"
                    Width="68"
                    Height="26"
                    Margin="28,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Telefono *"
                    FontWeight="Bold" />
                <Label
                    Grid.Column="0"
                    Width="71"
                    Height="26"
                    Margin="60,76,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Nombre(s)"
                    FontWeight="Bold" />
                <Label
                    Grid.Column="1"
                    Width="72"
                    Height="26"
                    Margin="28,76,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Apellido(s)"
                    FontWeight="Bold" />
                <Label
                    Grid.Column="2"
                    Width="41"
                    Height="26"
                    Margin="93,76,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="CURP"
                    FontWeight="Bold" />

                <Button
                    Width="120"
                    Height="40"
                    Click="btnSeleccionarImagen_Click"
                    Content="Seleccionar Imagen" Margin="120,113,215,154" Grid.Row="1" />
                <Image
                    x:Name="imgPreview"
                    Width="184"
                    Height="152"
                    Margin="135,57,136,98" Grid.Row="1" Grid.Column="1"
                    />

            </Grid>
        </Grid>
        <StackPanel
            Height="24"
            Margin="0,31,0,0"
            VerticalAlignment="Top"
            Orientation="Horizontal">

            <Label
                Width="Auto"
                Height="24"
                Margin="-2,0,0,0"
                Content="Inicio/BuscarClientes/"
                Foreground="White" />

            <Label
                Width="Auto"
                Height="24"
                Margin="-9,0,0,0"
                Content="ModificarCliente"
                FontWeight="Bold"
                Foreground="White" />

        </StackPanel>
    </Grid>
</Page>
