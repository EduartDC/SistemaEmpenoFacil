<Page x:Class="View.Views.CreateContract"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:View.Views"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="CreateContract">

    <ScrollViewer>
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="10"
                    x:Name="Header" />
                <RowDefinition
                    Height="90"/>
                <RowDefinition
                    Height="150"/>
                <RowDefinition
                    Height="*">

                </RowDefinition>
            </Grid.RowDefinitions>


            <Grid  Grid.Row="3" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            </Grid>
            <!--SetColorHeader-->
            <Grid
                Grid.Row="0"
                />

            <!--SetComponentents-->

            <Button Foreground="White"
                    Background="#323D8F" Content="Buscar cliente" Height="30" Width="120" FontSize="15" HorizontalAlignment="Left" Margin="178,17,0,0" Grid.Row="1" VerticalAlignment="Top" Click="BtnFindCustomer">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter  Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Foreground="White"
                    Background="#323D8F" Content="RegistrarCliente" Height="30" Width="120" FontSize="15" HorizontalAlignment="Left" Margin="309,18,0,0" Grid.Row="1" VerticalAlignment="Top">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter  Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <TextBox x:Name="tbCustomerCurp" MaxLength="18" HorizontalAlignment="Left" Margin="20,27,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="145" BorderBrush="#00ABADB3"/>
            <Label Content="Indetificación de Cliente" HorizontalAlignment="Left" Margin="14,1,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Bold"/>
            <Border BorderBrush="#FF330099" BorderThickness="1" HorizontalAlignment="Left" Height="1" Margin="24,0,0,0" Grid.Row="1" VerticalAlignment="Center" Width="149"/>
            <TextBox x:Name="tbNameCustomer" HorizontalAlignment="Left" Margin="26,66,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="141" BorderBrush="#00ABADB3"/>
            <Label Content="Indetificación de Cliente" HorizontalAlignment="Left" Margin="20,40,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Bold"/>
            <Border BorderBrush="#FF330099" BorderThickness="1" HorizontalAlignment="Left" Height="1" Margin="24,75,0,0" Grid.Row="1" VerticalAlignment="Center" Width="149"/>



            <TextBox
                x:Name="tbAppraisalAmount"
                HorizontalAlignment="Left"
                Margin="34,28,0,0"
                Grid.Row="3"
                TextWrapping="Wrap"
                Text=""
                VerticalAlignment="Top"
                Width="120"
                BorderBrush="#00ABADB3"
                />
            <Label
                Content="Monto de avalúo total"
                HorizontalAlignment="Left"
                Margin="28,5,0,0"
                Grid.Row="3"
                Grid.Column="2"
                VerticalAlignment="Top"
                FontWeight="Bold"/>
            <Border
                BorderBrush="#FF330099"
                BorderThickness="1"
                HorizontalAlignment="Left"
                Height="1"
                Margin="38,46,0,0"
                Grid.Row="3"
                VerticalAlignment="Top"
                Width="149"
                />
            <TextBox
                x:Name="tbLoanPorcentage"
                HorizontalAlignment="Left"
                Margin="34,76,0,0"
                Grid.Row="3"
                TextWrapping="Wrap"
                VerticalAlignment="Top"
                Width="120"
                BorderBrush="#00ABADB3"
                Text=""/>
            <Label
                Content="% de préstamo sobre avalúo"
                HorizontalAlignment="Left"
                Margin="28,50,0,0"
                Grid.Row="3"
                VerticalAlignment="Top"
                FontWeight="Bold"/>
            <Border
                BorderBrush="#FF330099"
                BorderThickness="1"
                HorizontalAlignment="Left"
                Height="1" Margin="38,94,0,0"
                Grid.Row="3"
                VerticalAlignment="Top"
                Width="149"/>
            <TextBox
                x:Name="tbTotalEndorsement"
                HorizontalAlignment="Left"
                Margin="34,122,0,0"
                Grid.Row="3"
                TextWrapping="Wrap"
                VerticalAlignment="Top"
                Width="120"
                BorderBrush="#00ABADB3"
                Text="1"
                />
            <Label
                Content="Total de refrendos aplicables"
                HorizontalAlignment="Left"
                Margin="28,96,0,0"
                Grid.Row="3"
                VerticalAlignment="Top"
                FontWeight="Bold"
                />
            <Border
                BorderBrush="#FF330099"
                BorderThickness="1"
                HorizontalAlignment="Left"
                Height="1"
                Margin="38,140,0,0"
                Grid.Row="3"
                VerticalAlignment="Top"
                Width="149"/>

            <StackPanel
                Grid.Row="2"
                Background="AliceBlue"
                >
                <Button
                    Foreground="White"
                    Background="#323D8F"
                    Content="Registrar prenda(s)"
                    HorizontalAlignment="Left"
                    Margin="40,10,0,0"
                    Grid.Row="2"
                    VerticalAlignment="Top"
                    Click="ClicCreatePledgeRegister"
                    Height="25" Width="150" FontSize="15">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter  Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button
                    Foreground="White"
                    Background="#323D8F"
                    Content="EliminarPrenda"
                    HorizontalAlignment="Left"
                    Margin="200,-25,0,0"
                    Grid.Row="2"
                    VerticalAlignment="Top"
                    Click="ClickDeleteBelonging"
                    Height="25" Width="120" FontSize="15">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter  Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button
                    Foreground="White"
                    Background="#323D8F"
                    Content="ModificarPrenda"
                    HorizontalAlignment="Left"
                    Margin="330,-25,0,0"
                    Grid.Row="2"
                    VerticalAlignment="Top"
                    Click="ClickModifyBelonging"
                    Height="25" Width="120" FontSize="15"
                    >
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter  Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <ScrollViewer Height="120">

                    <DataGrid
                        AutoGenerateColumns="False"
                        Grid.Row="2"
                        x:Name="dgBelongings"
                        Margin="39,10,76,0"
                        FontSize="15"
                        >

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Descripción generica" Binding="{Binding GenericDescription}" Width="150"/>
                            <DataGridTextColumn Header="Caracteristicas" Width="*" Binding="{Binding Features}"/>
                            <DataGridTextColumn Header="Serial(opt)" Binding="{Binding SerialNumber}">
                                <DataGridTextColumn.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter  Property="Content" Value="{Binding}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SerialNumber}" Value="" >
                                                <Setter  Property="Content" Value="N/A"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.CellStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Avalúo" Width="100" Binding="{Binding ApraisalAmount}"/>
                            <DataGridTextColumn Header="Prestamo" Width="100" Binding="{Binding LoanAmount }"/>
                            <!--<DataGridTextColumn Header="%Prestamo" Width="100" Binding="{Binding PorcentLoan}"/>-->
                            <DataGridTextColumn Header="%Prestamo" Width="100" Binding="{Binding PorcentLoan, StringFormat={}{0:N2}}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
                <Button
                    Content="EliminarPrenda"
                    Click="ClickDeleteBelonging"/>

            </StackPanel>

            <TextBox
                x:Name="tbDateComercialization"
                HorizontalAlignment="Left"
                Margin="224,28,0,0"
                Grid.Row="3"
                TextWrapping="Wrap"
                VerticalAlignment="Top"
                Width="150"
