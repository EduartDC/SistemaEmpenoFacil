                Height="30" Width="180" FontSize="20"
                Foreground="White"
                Background="#323D8F"
                FontWeight ="Bold">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter  Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button
