            <Button Content="Button" HorizontalAlignment="Left" Margin="670,46,0,0" Grid.Row="1" VerticalAlignment="Top" Click="Borrar"/>
            <TextBox

                HorizontalAlignment="Left"
                Margin="21,29,0,0"
                Grid.Row="3"
                TextWrapping="Wrap"
                Text="$"
                VerticalAlignment="Top"
                Width="15"
                BorderBrush="#00ABADB3"
                />
