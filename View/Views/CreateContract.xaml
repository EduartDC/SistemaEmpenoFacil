                />
            <Label
                Content=""
                HorizontalAlignment="Left"
                Margin="218,5,0,0"
                Grid.Row="3"
                VerticalAlignment="Top"
                FontWeight="Bold"/>
            <Button
                Content="GenerarContrato"
                HorizontalAlignment="Left"
                Margin="950,237,0,0"
                Grid.Row="3"
