            <Label
                Content="Fecha de comercialización"
                HorizontalAlignment="Left"
                Margin="216,7,0,0"
                Grid.Row="3"
                VerticalAlignment="Top"
                FontWeight="Bold"/>
            <Border
                BorderBrush="#FF330099"
                BorderThickness="1"
                HorizontalAlignment="Left"
                Height="1"
                Margin="225,45,0,0"
                Grid.Row="3"
                VerticalAlignment="Top"
                Width="149"/>
            <TextBox
                x:Name="tbPaymentLimit"
                HorizontalAlignment="Left"
                Margin="225,77,0,0"
                Grid.Row="3"
                TextWrapping="Wrap"
                VerticalAlignment="Top"
                Width="150"
                BorderBrush="#00ABADB3"/>
            <Label
                Content="Fecha limite de pago"
                HorizontalAlignment="Left"
                Margin="218,52,0,0"
                Grid.Row="3"
                VerticalAlignment="Top"
                FontWeight="Bold"/>
            <Border
                BorderBrush="#FF330099"
                BorderThickness="1"
                HorizontalAlignment="Left"
                Height="1"
                Margin="226,94,0,0"
                Grid.Row="3"
                VerticalAlignment="Top"
                Width="148"/>
            <TextBox
                x:Name="tbDateEndorsementSettlement"
                HorizontalAlignment="Left"
                Margin="586,33,0,0"
                Grid.Row="3"
                TextWrapping="Wrap"
                VerticalAlignment="Top"
                Width="120"
                BorderBrush="#00ABADB3"/>
            <Label
                Content="fecha refrendo/finiquito"
                HorizontalAlignment="Left"
                Margin="580,7,0,0"
                Grid.Row="3"
                VerticalAlignment="Top"
                FontWeight="Bold"/>
            <TextBox
                x:Name="tbLoanAmount"
                HorizontalAlignment="Left"
                Margin="223,166,0,0"
                Grid.Row="3"
                TextWrapping="Wrap"
                VerticalAlignment="Top"
                Width="120"
                BorderBrush="#00ABADB3"/>
            <Label
                Content="importe de préstamo"
                HorizontalAlignment="Left"
                Margin="218,144,0,0"
                Grid.Row="3"
                VerticalAlignment="Top"
                FontWeight="Bold"/>
            <Border
                BorderBrush="#FF330099"
                BorderThickness="1"
                HorizontalAlignment="Left"
                Height="1"
                Margin="224,188,0,0"
                Grid.Row="3"
                VerticalAlignment="Top"
                Width="150"/>
            <TextBox
                x:Name="tbInterests"
                HorizontalAlignment="Left"
                Margin="401,28,0,0"
                Grid.Row="3"
                TextWrapping="Wrap"
                VerticalAlignment="Top"
                Width="120"
                BorderBrush="#00ABADB3"
                />

            <Label
                Content="Intereses"
                HorizontalAlignment="Left"
                Margin="394,7,0,0"
                Grid.Row="3"
                VerticalAlignment="Top"
                FontWeight="Bold"/>
            <Border
                BorderBrush="#FF330099"
                BorderThickness="1"
                HorizontalAlignment="Left"
                Height="1"
                Margin="401,44,0,0"
                Grid.Row="3"
                VerticalAlignment="Top"
                Width="149"/>
            <TextBox
                x:Name="tbIVA"
                HorizontalAlignment="Left"
                Margin="398,76,0,0"
                Grid.Row="3"
                TextWrapping="Wrap"
                Text=""
                VerticalAlignment="Top"
                Width="120"
                BorderBrush="#00ABADB3"/>
            <Label
                Content="IVA"
                HorizontalAlignment="Left"
                Margin="395,51,0,0"
                Grid.Row="3"
                VerticalAlignment="Top"
                FontWeight="Bold"/>
            <Border

                BorderBrush="#FF330099"
                BorderThickness="1"
                HorizontalAlignment="Left"
                Height="1"
                Margin="401,95,0,0"
                Grid.Row="3"
                VerticalAlignment="Top"
                Width="149"/>
            <TextBox
                x:Name="tbAnnualInterestRate"
                HorizontalAlignment="Left"
                Margin="399,168,0,0"
                Grid.Row="3"
                TextWrapping="Wrap"
                VerticalAlignment="Top"
                Width="120"
                BorderBrush="#00ABADB3"/>
            <Label

                Content="Tasa de interes anual"
                HorizontalAlignment="Left"
                Margin="395,148,0,0"
                Grid.Row="3"
                VerticalAlignment="Top"
                FontWeight="Bold"/>
            <Border
                BorderBrush="#FF330099"
                BorderThickness="1"
                HorizontalAlignment="Left"
                Height="1"
                Margin="401,188,0,0"
                Grid.Row="3"
                VerticalAlignment="Top"
                Width="149"/>
            <TextBox
                x:Name="tbTotalPaymentForEndorsement"
                HorizontalAlignment="Left"
                Margin="755,33,0,0"
                Grid.Row="3"
                TextWrapping="Wrap"
                VerticalAlignment="Top"
                Width="120"
                BorderBrush="#00ABADB3"/>
            <Label
                Content="Total de pago por refrendo"
                HorizontalAlignment="Left"
                Margin="747,7,0,0"
                Grid.Row="3"
                VerticalAlignment="Top"
                FontWeight="Bold"/>
            <TextBox
