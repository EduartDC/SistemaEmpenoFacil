                VerticalAlignment="Top"
                FontWeight="Bold"/>
            <ComboBox
                x:Name="cbTerm"
                HorizontalAlignment="Left"
                Margin="28,168,0,0"
                Grid.Row="3"
                VerticalAlignment="Top"
